<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/movieDetailContainer"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <ImageView
        android:layout_width="@dimen/movie_detail_icon_dimen"
        android:layout_height="@dimen/movie_detail_icon_dimen"
        android:id="@+id/iv_awards_icon"
        android:layout_margin="@dimen/movie_detail_icon_margin"
        android:contentDescription="@string/movie_awards_icon"
        android:src="@drawable/svg_oscar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_awards"
        style="@style/movieDetailDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_awards_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Won 3 Oscars. Another 23 wins &amp; 27 nominations." />

</androidx.constraintlayout.widget.ConstraintLayout>