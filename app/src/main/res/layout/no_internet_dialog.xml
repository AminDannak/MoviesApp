<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDarkBackground"
    android:elevation="1dp">

    <ImageView
        android:id="@+id/iv_no_internet"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/no_internet_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/svg_no_internet" />

    <TextView
        android:id="@+id/tv_no_internet_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/no_internet_msg"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#00BCD4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_no_internet" />

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="@dimen/dialog_retry_button"
        android:layout_height="@dimen/dialog_retry_button"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/svg_reload"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_no_internet_text"
        app:layout_constraintStart_toStartOf="@+id/tv_no_internet_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_no_internet_text" />

</androidx.constraintlayout.widget.ConstraintLayout>